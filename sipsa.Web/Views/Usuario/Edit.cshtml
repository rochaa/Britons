@model sipsa.Web.Models.UsuarioModel

@{
    ViewData["Title"] = "Usuário - Alteração";
}

<h2>Alteração</h2>
<h4>Usuário</h4>
<hr />
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" class="form-control" type="hidden" />
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Permissao" class="control-label"></label>
                    <div class="radio">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Permissao" value="ADMINISTRADOR">
                            <label class="form-check-label"> Administrador </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Permissao" value="DIACONO">
                            <label class="form-check-label"> Diácono </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}