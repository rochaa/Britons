@model sipsa.Web.Models.MembroModel

@{
    ViewData["Title"] = "Membro - Novo";
}

<h2>Novo</h2>
<h4>Membro</h4>
<hr />
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Dados pessoais</h3>
                </div>
                <div class="panel-body">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <input asp-for="DataNascimento" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Naturalidade" class="control-label"></label>
                            <input asp-for="Naturalidade" class="form-control" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Naturalidade" class="control-label"></label>
                            <input asp-for="Naturalidade" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="EstadoCivil" class="control-label"></label>
                            <input asp-for="EstadoCivil" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Escolaridade" class="control-label"></label>
                            <input asp-for="Escolaridade" class="form-control" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label asp-for="Profissao" class="control-label"></label>
                            <input asp-for="Profissao" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Titulo" class="control-label"></label>
                            <input asp-for="Titulo" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Igreja" class="control-label"></label>
                            <input asp-for="Igreja" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}